#!/bin/bash

# Create SQLite Database
touch database/database.sqlite

bin/clear-cache

echo "ğŸ‰ Creating tables"
php artisan reload:db --quiet
php artisan seed:pre --quiet
# echo "ğŸ‰ Installing Laravel Passport"
# php artisan passport:install --force --quiet

if [[ $1 ]]; then
	echo "ğŸ‰ Seeding development data"
	php artisan seed:dev --quiet
fi
