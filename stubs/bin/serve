#!/usr/bin/env bash

if ! type "valet" > /dev/null; then
  echo "â˜ ï¸ You need valet to run this command" 
  return
fi

if [[ ! $1 ]]; then
	DOMAIN="${PWD##*/}"
else 
	DOMAIN="$1"
fi

echo "ðŸŽ‰ Setting up ${DOMAIN} domain"
valet unlink $DOMAIN --quiet --no-ansi --no-interaction >/dev/null
cd public 
valet link $DOMAIN --secure --quiet --no-ansi --no-interaction >/dev/null
cd ..
echo "ðŸŽ‰ Setting up ${DOMAIN} completed"
echo "ðŸŽ‰ Open up ${DOMAIN}"
valet open $DOMAIN
echo "ðŸŽ‰ Successfully setup ${DOMAIN} domain"